	email = backwardspy@gmail.com
	name = backwardspy
	signingkey = ~/.ssh/id_ed25519.pub

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[diff]
	external = difft

[gpg]
	format = ssh

[commit]
	gpgsign = true

[tag]
	gpgsign = true
