[user]
	email = backwardspy@gmail.com
	name = backwardspy
	signingKey = ~/.ssh/id_ed25519.pub

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[diff]
	external = difft

[gpg]
	format = ssh

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[push]
    gpgSign = "if-asked"

[init]
	defaultBranch = main
