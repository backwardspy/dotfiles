"$schema" = "https://starship.rs/config-schema.json"

add_newline = true
palette = "catppuccin_mocha"

format = """
$directory\
[](fg:red bg:yellow)\
$git_branch\
$git_status\
[](fg:yellow bg:green)\
$golang\
$nodejs\
$rust\
$python\
$lua\
[](fg:green)\
$line_break\
$character
"""

[character]
format = "$symbol "
success_symbol = '[ ](bg:green)[](fg:green)'
error_symbol = '[ ](bg:red)[](fg:red)'
vimcmd_symbol = '[ ](bg:lavender)[](fg:lavender)'
vimcmd_replace_one_symbol = '[ ](bg:maroon)[](fg:bold maroon)'
vimcmd_replace_symbol = '[ ](bg:maroon)[](fg:maroon)'
vimcmd_visual_symbol = '[ ](bg:flamingo)[](fg:flamingo)'
disabled = false

[directory]
style = "fg:base bg:red"
format = "[ $path ]($style)"
truncation_length = 0
truncate_to_repo = true

[directory.substitutions]
"Downloads" = " "
"Sync" = " "
"src" = " "
".config" = " "

[git_branch]
style = "fg:base bg:yellow"
format = '[ $symbol$branch]($style)'

[git_status]
style = "fg:base bg:yellow"
format = '[ $all_status$ahead_behind]($style)'

[golang]
symbol = " "
style = "fg:base bg:green"
format = '[ $symbol ($version)]($style)'

[nodejs]
symbol = " "
style = "fg:base bg:green"
format = '[ $symbol ($version)]($style)'

[rust]
symbol = " "
style = "fg:base bg:green"
format = '[ $symbol ($version)]($style)'

[python]
symbol = " "
style = "fg:base bg:green"
format = '[ $symbol ($version)]($style)'

[lua]
symbol = " "
style = "fg:base bg:green"
format = '[ $symbol ($version)]($style)'

